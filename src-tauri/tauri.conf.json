{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sonora Dictation",
  "version": "0.1.0",
  "identifier": "com.sonora.dictation",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3500",
    "beforeBuildCommand": "pnpm build && pnpm model:download && pnpm sidecar:setup",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sonora Dictation",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/models",
      "resources/bin",
      "resources/faster-whisper"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
