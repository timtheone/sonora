{
  "name": "sonora-dictation",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:build": "pnpm model:download && pnpm sidecar:setup && pnpm tauri build",
    "model:download": "node scripts/download-models.mjs",
    "model:download:balanced": "pnpm model:download balanced",
    "model:download:fast": "pnpm model:download fast",
    "sidecar:setup": "node scripts/setup-whisper-sidecar.mjs",
    "sidecar:setup:force": "pnpm sidecar:setup --force-clone",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:rust": "cargo test --manifest-path src-tauri/Cargo.toml --no-default-features",
    "test:rust:desktop": "cargo test --manifest-path src-tauri/Cargo.toml",
    "test:all": "pnpm test && pnpm test:rust"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^4.0.18"
  }
}
